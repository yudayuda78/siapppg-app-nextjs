generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model event{
  id Int @id @default(autoincrement())
  title String
  slug String @unique
  img String?
  start DateTime
  end DateTime
  linkDaftar String
  createdAt DateTime @default(now())
}

model sertifikat{
  id Int @id @default(autoincrement())
  name String
  slug String @unique

}

model datasertifikat{
  id Int @id @default(autoincrement())
  name String
  instansi String
  slug String @unique
  kegiatan String
  fasilitas String
  jenissertif String?
}