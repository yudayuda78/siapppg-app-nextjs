generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Event{
  id Int @id @default(autoincrement())
  title String
  slug String @unique
  img String?
  start DateTime
  end DateTime
  linkDaftar String
  createdAt DateTime @default(now())
}

model Sertifikat{
  id Int @id @default(autoincrement())
  name String
  slug String @unique

}

model Datasertifikat{
  id Int @id @default(autoincrement())
  name String
  instansi String
  slug String @unique
  kegiatan String
  fasilitas String
  jenissertif String?
}


model Course{
  id Int @id @default(autoincrement())
  title String
  slug String @unique
  fasilitas String
  topics Topic[]
  createdAt DateTime @default(now())
}

model Topic{
  id Int @id @default(autoincrement())
  title String
  slug String @unique
  courseId Int
  course    Course   @relation(fields: [courseId], references: [id])
}